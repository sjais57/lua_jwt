curl http://127.0.0.1:9180/apisix/admin/routes/1 \
-H 'X-API-KEY: your-admin-key' -X PUT -d '
{
  "uri": "/api/*",
  "plugins": {
    "jwt-auth": {
      "claim_headers": {
        "active_group": "x-jwt-claim-activegroup",
        "configs": "x-jwt-claim-configs"
      }
    },
    "request-transformer": {
      "body": {
        "set": {
          # Use the active group from JWT to dynamically construct the path
          "config": "{{parse_json(header_x-jwt-claim-configs)[header_x-jwt-claim-activegroup].configuration_name[0]}}"
        }
      }
    }
  }
}'
