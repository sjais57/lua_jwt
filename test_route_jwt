curl -X PUT 'http://<APISIX_ADMIN_IP>:<PORT>/apisix/admin/routes/1' \
-H 'X-API-KEY: <YOUR_API_KEY>' \
-H 'Content-Type: application/json' \
-d '{
  "uri": "/your-endpoint",
  "plugins": {
    "response-rewrite": {
      "body": "local body = require('cjson').decode(ngx.arg[1]); if body.query then body.questions = body.query; body.query = nil; end; return require('cjson').encode(body)",
      "filters": [
        {
          "regex": "query",
          "replace": "questions"
        }
      ],
      "headers": {
        "Content-Type": "application/json"
      }
    }
  },
  "upstream": {
    "type": "roundrobin",
    "nodes": {
      "<UPSTREAM_SERVICE>": 1
    }
  }
}'
