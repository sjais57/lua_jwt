[[servers]]
host = "ad.example.com"
port = 389
use_ssl = false
start_tls = true

bind_dn = "CN=grafana-bind,OU=ServiceAccounts,DC=example,DC=com"
bind_password = "MySecurePassword123"  # or use vault injection

search_filter = "(sAMAccountName=%s)"
search_base_dns = ["OU=Users,DC=example,DC=com"]

group_search_filter = "(&(objectClass=group)(member=%s))"
group_search_filter_user_attribute = "dn"
group_search_base_dns = ["OU=Groups,DC=example,DC=com"]

[[servers.group_mappings]]
group_dn = "CN=GrafanaAdmins,OU=Groups,DC=example,DC=com"
org_role = "Admin"

[[servers.group_mappings]]
group_dn = "CN=GrafanaEditors,OU=Groups,DC=example,DC=com"
org_role = "Editor"

[[servers.group_mappings]]
group_dn = "*"
org_role = "Viewer"
