[[servers]]
host = "ad.example.com"
port = 389
use_ssl = false
bind_dn = "CN=ldap-user,OU=Service Accounts,DC=example,DC=com"
bind_password = "your_password"
search_filter = "(sAMAccountName=%s)"
search_base_dns = ["DC=example,DC=com"]

[servers.attributes]
name = "givenName"
surname = "sn"
username = "sAMAccountName"
email = "mail"

[[servers.group_mappings]]
group_dn = "*"
org_role = "Admin"


ldapsearch -x -H ldaps://your-ldap-server:636 -D "cn=admin,dc=example,dc=com" -W -b "dc=example,dc=com" "(objectClass=*)"
